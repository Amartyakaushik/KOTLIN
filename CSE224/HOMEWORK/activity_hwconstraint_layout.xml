<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayout"
    android:background="@drawable/UNI"
    android:backgroundTintMode="src_atop">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/uniLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/glb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University"
        android:textSize="26sp"
        android:textColor="#EAB700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/details"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="152dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glb"
        android:layout_marginTop="40dp"
        android:layout_marginStart="12dp"
        android:background="#48FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textColorHighlight="@color/black"
        android:text="Oldest Universities: The University of Al Quaraouiyine in Morocco is considered the oldest existing degree-granting institution in the world, founded in 859 AD. In Europe, the University of Bologna, founded in 1088, is the oldest."
        android:textSize="16sp"
        android:textColor="#000"
        android:padding="1dp"/>


    <ImageView
        android:id="@+id/map"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/map_detls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Map"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginEnd="100dp"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/contact_us"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Contact Us"

        android:layout_marginBottom="4dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <LinearLayout
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:padding="3dp"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="IG"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#AA43A9"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="FB"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#2D4E9D"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="LND"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#3367C0"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="WA"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="#74CA6C"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Phone"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#4F5155"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
